<style>
  .thumbnail {
    margin-bottom: 10px;
  }

  .thumbnail .caption {
    padding: 0 9px
  }
</style>
<div class="container" style="margin-top: 20px;">
  {{#each children as |group|}}
  <div class="panel panel-default">
    {{#if group.name}}
    <div class="panel-heading">
      <h1 class="panel-title" style="font-size: 24px;">
        {{group.name}}
        <small>// {{group.description}}</small>
      </h1>
    </div>
    {{/if}}
    <div class="panel-body row" style="padding-bottom: 5px;">
      {{#each group.children as |item|}}
      {{#if item.name}}
      <div class="col-xs-6 col-md-3">
        <a href="{{link @root.path group.path item.path item.link}}" class="thumbnail" style="text-decoration: none;">
          {{! <img src="holder.js/64x64" alt="..." style="float: left;padding: 9px;height: 64px;width: 64px;border-radius: 50%;"> }}
          <div class="caption">
            <h5>{{item.name}}</h5>
            {{#if item.description}}
            <p>{{item.description}} </p>
            {{/if}}
          </div>
        </a>
        {{#if item.gist}}
        <a href="https://gist.github.com/langnang/ab983446919896623f070fe45375295c/archive/b13a5306211cd68dc719e359e287254e8e8f2ed3.zip" style="position:absolute;top:0;right:20px;">
          <i class="fas fa-file-archive"></i>
        </a>
        {{/if}}
      </div>
      {{/if}}
      {{/each}}
    </div>
  </div>
  {{/each}}
</div>
