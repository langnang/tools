<style>
  .progress {
    position: relative;
    height: 50px;
  }

  .progress>label {
    position: absolute;
    width: 100%;
    height: 100%;
    text-align: center;
  }
</style>
{{#>app-container}}
<div class="progress-wrapper">
  <div class="progress">
    <label>1/111</label>
    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
      <span class="sr-only">40% Complete (success)</span>
    </div>
  </div>
  <pre>{{code}}</pre>
</div>

{{/app-container}}
